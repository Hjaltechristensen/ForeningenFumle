@code {
	[Inject]
	public UserState? user { get; set; }

	protected override void OnInitialized()
	{
		if (user != null)
		{
			user.OnChange += StateHasChanged;
		}
	}

	public void Dispose()
	{
		if (user != null)
		{
			user.OnChange -= StateHasChanged;
		}
	}
}